<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <RootNamespace>Webdiyer.AspNetCore</RootNamespace>
    <AssemblyName>Webdiyer.AspNetCore.MvcCorePager</AssemblyName>
    <PackageId>Webdiyer.MvcCorePager</PackageId>
    <Authors>Webdiyer</Authors>
    <Company />
    <Product>MvcCorePager</Product>
    <Description>Pagination compoment for ASP.NET Core Mvc 2.0+</Description>
    <Copyright>2017-2019 Webdiyer</Copyright>
    <PackageProjectUrl>http://www.webdiyer.com/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Webdiyer/MvcCorePager</RepositoryUrl>
    <PackageTags>MvcPager MvcCorePager</PackageTags>
    <SignAssembly>false</SignAssembly>
    <AssemblyOriginatorKeyFile>MvcCorePager.pfx</AssemblyOriginatorKeyFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>0.1.0.0</AssemblyVersion>
    <FileVersion>0.1.0.0</FileVersion>
    <Version>0.1.0.0</Version>
    <PackageLicenseUrl>https://github.com/Webdiyer/MvcPagerCore/blob/master/LICENSE</PackageLicenseUrl>
    <DelaySign>false</DelaySign>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netcoreapp2.0\Webdiyer.WebControls.MvcPager.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>E:\GitHub\MvcCorePager\Src\Webdiyer.AspNetCore.MvcCorePager.xml</DocumentationFile>
  </PropertyGroup>


  <ItemGroup>
    <EmbeddedResource Include="wwwroot\js\MvcCorePager\MvcCorePager.js" />
    <EmbeddedResource Include="wwwroot\js\MvcCorePager\MvcCorePager.min.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="resources\MvcCorePagerResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>MvcCorePagerResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="resources\MvcCorePagerResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>MvcCorePagerResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="resources\MvcCorePagerResources.zh-Hans.resx">
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="resources\MvcCorePagerResources.zh-Hant.resx">
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
  </ItemGroup>

</Project>